
@{
    ViewBag.Title = "Index";
}

<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Thêm phim mới</h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        @using (Html.BeginForm("", "", FormMethod.Post, new { @class = "form-horizontal form-label-left input_mask" }))
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <!--Begin Left Column-->
                <div class="col-md-6 col-xs-12">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Thông tin cơ bản</h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li>
                                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                    <ul class="dropdown-menu" role="menu">
                                        <li>
                                            <a href="#">Settings 1</a>
                                        </li>
                                        <li>
                                            <a href="#">Settings 2</a>
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <br />
                            <div class="form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12" for="name">
                                    Tên phim
                                </label>
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    @Html.TextBox("name", "", new { @class = "form-control col-md-7 col-xs-12", id = "name", type = "text" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12" for="summary">
                                    Nội dung tóm tắt
                                </label>
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    @Html.TextArea("summary", "", new { @class = "resizable_textarea form-control", id = "summary", rows = "5" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12" for="price">
                                    Giá bán
                                </label>
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    @Html.TextBox("price", "", new { @class = "form-control col-md-7 col-xs-12", id = "price", type = "text" })
                                    <span class="form-control-feedback right" aria-hidden="true">vnđ</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12" for="sale">
                                    Khuyến mãi
                                </label>
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    @Html.TextBox("sale", "", new { @class = "form-control col-md-7 col-xs-12", id = "sale", type = "text" })
                                    <span class="fa fa-percent form-control-feedback right" aria-hidden="true"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12" for="date">
                                    Ngày đăng
                                </label>
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    @Html.TextBox("date", "", new { @class = "form-control col-md-7 col-xs-12", id = "date", type = "date" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12" for="user">
                                    Tài khoản
                                </label>
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    @Html.TextBox("user", "", new { @class = "form-control col-md-7 col-xs-12", id = "user", type = "text" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12" for="user">
                                    Số lượt mua
                                </label>
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    @Html.TextBox("buy", "", new { @class = "form-control col-md-7 col-xs-12", id = "buy", type = "number" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2 col-sm-2 col-xs-12" for="user">
                                    Đã duyệt
                                </label>
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    @Html.CheckBox("valid", new { @class = "form-check-label icheckbox_flat-green", @checked = "checked" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--End Left Column-->
                <!--Begin Right Column-->
                <div class="col-md-6 col-xs-12">
                    <!--Begin Upload-->
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Thông tin chi tiết</h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li>
                                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                </li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                    <ul class="dropdown-menu" role="menu">
                                        <li>
                                            <a href="#">Settings 1</a>
                                        </li>
                                        <li>
                                            <a href="#">Settings 2</a>
                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a class="close-link"><i class="fa fa-close"></i></a>
                                </li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            <p>Bấm hoặc kéo thả hình vào đây để upload</p>
                            <div action="@Url.Action("Index","NewMovie")" class="dropzone"></div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2 col-sm-2 col-xs-12" for="date">
                                Số tập
                            </label>
                            <div class="col-md-7 col-sm-7 col-xs-12">
                                @Html.TextBox("episode", "", new { @class = "form-control col-md-7 col-xs-12", id = "episode", type = "text" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2 col-sm-2 col-xs-12" for="date">
                                Thời lượng
                            </label>
                            <div class="col-md-7 col-sm-7 col-xs-12">
                                @Html.TextBox("time", "", new { @class = "form-control col-md-7 col-xs-12", id = "time", type = "text" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2 col-sm-2 col-xs-12" for="date">
                                Nhà sản xuất
                            </label>
                            <div class="col-md-7 col-sm-7 col-xs-12">
                                @Html.TextBox("nsx", "", new { @class = "form-control col-md-7 col-xs-12", id = "nsx", type = "text" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2 col-sm-2 col-xs-12" for="date">
                                Điểm IMDb
                            </label>
                            <div class="col-md-7 col-sm-7 col-xs-12">
                                @Html.TextBox("mark", "", new { @class = "form-control col-md-7 col-xs-12", id = "mark", type = "text" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2 col-sm-2 col-xs-12" for="date">
                                Ngày phát hành
                            </label>
                            <div class="col-md-7 col-sm-7 col-xs-12">
                                @Html.TextBox("publish", "", new { @class = "form-control col-md-7 col-xs-12", id = "publish", type = "date" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2 col-sm-2 col-xs-12" for="date">
                                Định dạng
                            </label>
                            <div class="col-md-7 col-sm-7 col-xs-12">
                                @Html.DropDownList("resolution", new List<SelectListItem>
                                           {
                                                  new SelectListItem { Text = "HD", Value = "1", Selected=true},
                                                  new SelectListItem { Text = "Full HD", Value = "2"},
                                            }, new { @class = "form-control col-md-7 col-xs-12" })
                            </div>
                        </div>                      
                    </div>

                    <!--End Upload-->
                </div>
                <!--End Right Column-->
            </div>
            <div class="row">
                <!--Begin wysiwug-->
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Nội dung phim</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a href="#">Settings 1</a>
                                    </li>
                                    <li>
                                        <a href="#">Settings 2</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div id="alerts"></div>
                        <div class="btn-toolbar editor" data-role="editor-toolbar" data-target="#editor-one">
                            <div class="btn-group">
                                <a class="btn dropdown-toggle" data-toggle="dropdown" title="Font"><i class="fa fa-font"></i><b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                </ul>
                            </div>

                            <div class="btn-group">
                                <a class="btn dropdown-toggle" data-toggle="dropdown" title="Font Size"><i class="fa fa-text-height"></i>&nbsp;<b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a data-edit="fontSize 5">
                                            <p style="font-size:17px">Huge</p>
                                        </a>
                                    </li>
                                    <li>
                                        <a data-edit="fontSize 3">
                                            <p style="font-size:14px">Normal</p>
                                        </a>
                                    </li>
                                    <li>
                                        <a data-edit="fontSize 1">
                                            <p style="font-size:11px">Small</p>
                                        </a>
                                    </li>
                                </ul>
                            </div>

                            <div class="btn-group">
                                <a class="btn" data-edit="bold" title="Bold (Ctrl/Cmd+B)"><i class="fa fa-bold"></i></a>
                                <a class="btn" data-edit="italic" title="Italic (Ctrl/Cmd+I)"><i class="fa fa-italic"></i></a>
                                <a class="btn" data-edit="strikethrough" title="Strikethrough"><i class="fa fa-strikethrough"></i></a>
                                <a class="btn" data-edit="underline" title="Underline (Ctrl/Cmd+U)"><i class="fa fa-underline"></i></a>
                            </div>

                            <div class="btn-group">
                                <a class="btn" data-edit="insertunorderedlist" title="Bullet list"><i class="fa fa-list-ul"></i></a>
                                <a class="btn" data-edit="insertorderedlist" title="Number list"><i class="fa fa-list-ol"></i></a>
                                <a class="btn" data-edit="outdent" title="Reduce indent (Shift+Tab)"><i class="fa fa-dedent"></i></a>
                                <a class="btn" data-edit="indent" title="Indent (Tab)"><i class="fa fa-indent"></i></a>
                            </div>

                            <div class="btn-group">
                                <a class="btn" data-edit="justifyleft" title="Align Left (Ctrl/Cmd+L)"><i class="fa fa-align-left"></i></a>
                                <a class="btn" data-edit="justifycenter" title="Center (Ctrl/Cmd+E)"><i class="fa fa-align-center"></i></a>
                                <a class="btn" data-edit="justifyright" title="Align Right (Ctrl/Cmd+R)"><i class="fa fa-align-right"></i></a>
                                <a class="btn" data-edit="justifyfull" title="Justify (Ctrl/Cmd+J)"><i class="fa fa-align-justify"></i></a>
                            </div>

                            <div class="btn-group">
                                <a class="btn dropdown-toggle" data-toggle="dropdown" title="Hyperlink"><i class="fa fa-link"></i></a>
                                <div class="dropdown-menu input-append">
                                    <input class="span2" placeholder="URL" type="text" data-edit="createLink" />
                                    <button class="btn" type="button">Add</button>
                                </div>
                                <a class="btn" data-edit="unlink" title="Remove Hyperlink"><i class="fa fa-cut"></i></a>
                            </div>

                            <div class="btn-group">
                                <a class="btn" title="Insert picture (or just drag & drop)" id="pictureBtn"><i class="fa fa-picture-o"></i></a>
                                <input type="file" data-role="magic-overlay" data-target="#pictureBtn" data-edit="insertImage" />
                            </div>

                            <div class="btn-group">
                                <a class="btn" data-edit="undo" title="Undo (Ctrl/Cmd+Z)"><i class="fa fa-undo"></i></a>
                                <a class="btn" data-edit="redo" title="Redo (Ctrl/Cmd+Y)"><i class="fa fa-repeat"></i></a>
                            </div>
                        </div>

                        <div id="editor-one" class="editor-wrapper"></div>

                        <textarea name="descr" id="descr" style="display:none;"></textarea>

                        <br />

                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-9 col-sm-9 col-xs-12">
                                <button type="submit" class="btn btn-success">Lưu</button>
                                <button class="btn btn-primary" type="reset">Nhập lại</button>
                                <button type="button" class="btn btn-primary">Hủy</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!--End wysiwug-->
            </div>
        }
    </div>
</div>
